# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab # https://github.com/withastro/astro/pull/2253
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{.*,*.md,*.mdx,*.json,*.toml,*.yml,*.yaml}]
indent_size = 4
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0