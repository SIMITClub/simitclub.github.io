---
import Meta from '@components/Meta.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ImageMetadata, ImageOutputFormat } from 'astro';

export interface Props {
	title: string;
	description: string;
	image: ImageMetadata | string;
	format?: ImageOutputFormat;
	classList?: string;
}

const { title, description, image, format = 'webp', classList = '' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Meta title={title} description={description} image={image} format={format} />
	</head>
	<body class="light">
		<!-- HEADER -->
		<Header />

		<!-- MAIN -->
		<main id="Skip">
			<div class:list={['content-container', classList]}>
				<slot />
			</div>
		</main>

		<!-- FOOTER -->
		<Footer />
	</body>
</html>
